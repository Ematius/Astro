---
import Extras from './extras.astro'

type Character = {
    isAlive: boolean;
    message: string;
    name: string;
    family: string;
    age: number;
    reignYears: number;
    category: string;
    weapon?: undefined;
    skillLevel?: undefined;
    adviseTo?: undefined;
    serveLevel?: undefined;
    servesTo?: undefined;
}

type Props = {
    character: any
}
const {character} = Astro.props

const fullName = `${character.name} ${character.family}`
const image = `/src/assets/${character.name}.jpg`
const imageAlt = `Imagen de ${character.name} ${character.family}`
---

<li class="character col">
        <div class="card character__card">
          <img src={image} alt={imageAlt} class="character__picture card-img-top" />
          <div class="card-body">
            <h2 class="character__name card-title h4">{fullName}</h2>
            <div class="character__info">
              <ul class="list-unstyled">
                <li>Edad: X a√±os</li>
                <li>
                  Estado:
                  {
                    character.isAlive 
                    ? <i class="fas fa-thumbs-up"></i>
                    : <i class="fas fa-thumbs-down"></i>
                  }
                </li>
              </ul>
            </div>
            <div class="character__overlay">
              <Extras character ={character}/>
              <div class="character__actions">
                <button class="character__action btn">habla</button>
                <button class="character__action btn">muere</button>
              </div>
            </div>
          </div>
          <i class="emoji"></i>
        </div>
      </li>